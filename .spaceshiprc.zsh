# Kubectl
SPACESHIP_KUBECTL_SHOW=true
SPACESHIP_KUBECTL_PREFIX=""

SPACESHIP_PROMPT_ORDER=(
    user
    host
    dir
    git
    line_sep
    char
)

SPACESHIP_RPROMPT_ORDER=(
    exit_code
    exec_time
    kubectl
)

